{
  "name": "mask-smith",
  "displayName": "Mask Smith",
  "description": "A VSCode extension for protecting sensitive information using AES encryption",
  "version": "0.0.3",
  "publisher": "Yarmu",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mask-smith.maskSelection",
        "title": "%commands.maskSelection%",
        "category": "Mask Smith"
      },
      {
        "command": "mask-smith.copy",
        "title": "%commands.copyMaskedSelection%",
        "category": "Mask Smith"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mask-smith.maskSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "mask-smith.copy",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mask-smith.maskSelection",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorHasSelection"
      },
      {
        "command": "mask-smith.copy",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iceyarmu/mask-smith.git"
  }
}
